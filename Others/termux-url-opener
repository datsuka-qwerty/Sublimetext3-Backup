#!/bin/sh

#Set video save path must include /
SAVE_PATH="~/storage/downloads/youtube-dl/"

echo "Which do you want to download?"
echo
echo "1)One Video"
echo "2)Playlist"
echo "3)Channel"
echo "4)Audio"
echo
echo "5)Exit"
echo
echo "11)Normal Download"
echo "22)Normal Audio Download"
echo "99)Update yt-dlp"
echo
read  -p " -> " SELECT
echo "You selected ${SELECT}"

if [ "$SELECT" -eq "1" ]
then
	yt-dlp -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]"  -o "$SAVE_PATH%(title)s-%(uploader)s.mp4" --no-mtime $1
elif [ "$SELECT" -eq "2" ]
then
	yt-dlp -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]"  -o "$SAVE_PATH%(playlist_uploader)s-%(playlist_title)s/%(playlist_index)s_%(title)s-%(uploader)s.mp4" --no-mtime $1
elif [ "$SELECT" -eq "3" ]
then
	yt-dlp -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]"  -o "$SAVE_PATH%(channel)s/%(upload_date)s_%(title)s-%(uploader)s.mp4" --no-mtime $1
elif [ "$SELECT" -eq "4" ]
then
	echo "1)One video"
	echo "2)Plyalist"
	echo "3)Exit"
	echo
	read -p " -> " SELECT1
	echo "You selected ${SELECT1}"
	if [ "$SELECT1" -eq "1" ]
	then
		yt-dlp -f "bestaudio[ext=m4a]/best[ext=m4a]"  -o "$SAVE_PATH%(title)s-%(uploader)s.m4a" --no-mtime $1
	elif [ "$SELECT1" -eq "2" ]
	then
		yt-dlp -f "bestaudio[ext=m4a]/best[ext=m4a]"  -o "$SAVE_PATH%(playlist_index)s_%(title)s-%(uploader)s.m4a" --no-mtime $1
	elif [ "$SELECT1" -eq "3" ]
	then
		echo "Exit!"
		sleep 3s
		exit
	else
		echo "Please Retery :-("
		exit
	fi
elif [ "$SELECT" -eq "5" ]
then
	echo "Exit!"
	sleep 3s
	exit
elif [ "$SELECT" -eq "11"]
then
	yt-dlp -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]" -o "$SAVE_PATH%(title)s.mp4" $1
elif [ "$SELECT" -eq "22" ]
then
	yt-dlp -f "bestaudio[ext=m4a]/best[ext=m4a]" -o "$SAVE_PATH%(title)s.m4a" $1
elif [ "$SELECT" -eq "99" ]
then
	pip install yt-dlp -U
	sleep 3s
	exit
else
	echo "Please Retery :-("
	sleep 5s
fi

exit
